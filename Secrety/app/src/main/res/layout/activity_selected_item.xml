<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.gymapp.secrety.SelectedItemActivity">

    <RelativeLayout
            android:layout_width="324dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp">
    <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/post"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:paddingBottom="1dp"
            android:clipToPadding="false"
            android:orientation="horizontal" tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="8dp">
        <ImageView
                android:id="@+id/background_image"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/post_text"
                android:typeface="sans"
                android:elevation="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="0dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:textColor="@color/colorAccent"
                android:textSize="40dp">
        </TextView>

        <TextView
                android:id="@+id/post_info"
                android:textColor="#fff"
                android:textSize="10dp"
                android:elevation="0dp"
                android:typeface="monospace"
                android:padding="0dp"
                android:gravity="end"
                android:layout_gravity="bottom"
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="8dp"/>
        <TextView
                android:id="@+id/post_place"
                android:textColor="#fff"
                android:typeface="monospace"
                android:textSize="20dp"
                android:elevation="0dp"
                android:padding="0dp"
                android:layout_gravity="top"
                android:gravity="start"
                android:layout_width="0dp" android:layout_height="wrap_content" tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="8dp"/>
    </FrameLayout>
        <ListView
                android:id="@+id/list_comments"
                android:layout_below="@+id/post"
                android:layout_width="match_parent"
                android:layout_height="130dp"></ListView>
        <EditText android:id="@+id/message"
                  android:hint="Введите сообщение"
                  android:layout_below="@+id/list_comments"
                  android:inputType="text"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
