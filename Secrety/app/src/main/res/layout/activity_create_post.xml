<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.gymapp.secrety.CreatePostActivity">
        <RelativeLayout
                android:layout_width="324dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="8dp">
            <FrameLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/post"
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal" tools:layout_editor_absoluteY="0dp"
                    tools:layout_editor_absoluteX="8dp">
                <ImageView
                        android:id="@+id/background_image"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/post_text"
                        android:typeface="sans"
                        android:elevation="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="0dp"
                        android:hint="Ваш текст"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:textColor="@color/colorAccent"
                        android:textSize="40dp">
                </TextView>
            </FrameLayout>
            <HorizontalScrollView
                    android:id="@+id/scroll_color_blocks"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/post"
                    android:paddingBottom="10dp"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:id="@+id/color_blocks"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/post" android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageButton
                            android:id="@+id/block_red"
                            android:layout_marginLeft="12dp"
                            android:background="@color/colorPrimary"
                            android:layout_width="60dp" android:layout_height="60dp"/>
                    <ImageButton
                            android:id="@+id/block_blue"
                            android:layout_marginLeft="12dp"
                            android:background="@color/blue"
                            android:layout_width="60dp" android:layout_height="60dp"/>
                    <ImageButton
                            android:id="@+id/block_purple"
                            android:layout_marginLeft="12dp"
                            android:background="@color/purple"
                            android:layout_width="60dp" android:layout_height="60dp"/>
                    <ImageButton
                            android:id="@+id/block_pink"
                            android:layout_marginLeft="12dp"
                            android:background="@color/pink"
                            android:layout_width="60dp" android:layout_height="60dp"/>
                    <ImageButton
                            android:id="@+id/block_black"
                            android:layout_marginLeft="12dp"
                            android:background="@color/black"
                            android:layout_width="60dp" android:layout_height="60dp"/>
                    <ImageButton
                            android:id="@+id/block_dark_teal"
                            android:layout_marginLeft="12dp"
                            android:background="@color/dark_teal"
                            android:layout_width="60dp" android:layout_height="60dp"/>
                    <ImageButton
                            android:id="@+id/block_bardo"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@color/bardo"
                            android:layout_width="60dp" android:layout_height="60dp"/>
                    <ImageButton
                            android:id="@+id/block_orange"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@color/orange"
                            android:layout_width="60dp" android:layout_height="60dp"/>
                    <ImageButton
                            android:id="@+id/block_salat_orange"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@color/salat_green"
                            android:layout_width="60dp" android:layout_height="60dp"/>
                </LinearLayout>
            </HorizontalScrollView>
            <EditText
                    android:id="@+id/edit_post_text"
                    android:hint="Введите текст блять"
                    android:layout_below="@+id/scroll_color_blocks"
                    android:inputType="text"
                    android:maxLines="1"
                    android:maxLength="40"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <LinearLayout
                    android:layout_width="324dp"
                    android:layout_below="@id/edit_post_text"
                    android:orientation="vertical"
                    android:layout_height="437dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    tools:layout_editor_absoluteY="8dp"
                    tools:layout_editor_absoluteX="8dp">
                <Button
                        android:id="@+id/btn_add_post"
                        android:text="Добавить пост"
                        android:gravity="center"
                        android:textColor="@color/colorAccent"
                        android:background="@color/colorPrimary"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
</android.support.constraint.ConstraintLayout>
